rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their own user document, but cannot write counter fields
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // Allow creation without counter field restrictions (for onboarding)
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow updates but prevent counter field modifications
      allow update: if request.auth != null && request.auth.uid == userId &&
        // Anti-cheat: Prevent clients from writing counter fields
        !('totalCount' in request.resource.data.diff(resource.data).affectedKeys()) &&
        !('dailyCount' in request.resource.data.diff(resource.data).affectedKeys()) &&
        !('weeklyCount' in request.resource.data.diff(resource.data).affectedKeys()) &&
        !('streakCount' in request.resource.data.diff(resource.data).affectedKeys()) &&
        !('lastCompleted' in request.resource.data.diff(resource.data).affectedKeys());
    }
    
    // Anyone can read challenges
    match /challenges/{challengeId} {
      allow read: if true;
      allow write: if false; // Only admins can write challenges
    }
    
    // Users can create completions for themselves
    match /completions/{completionId} {
      allow create: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         completionId.matches('^' + request.auth.uid + '_.*_UTC$'));
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         completionId.matches('^' + request.auth.uid + '_.*_UTC$'));
      allow update, delete: if false; // Completions are immutable
    }
    
    // Leaderboard entries are read-only for users
    match /leaderboards/{leaderboardId} {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Custom challenges - users can create and read their own
    match /customChallenges/{challengeId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Selected challenges - users can manage their own selections
    match /selectedChallenges/{selectionId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
  }
}
